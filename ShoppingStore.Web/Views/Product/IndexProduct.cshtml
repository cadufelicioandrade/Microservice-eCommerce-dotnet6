
@{ ViewData["Title"] = "Product"; }
@model IEnumerable<ProductViewModel>


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProduct" class="btn btn-primary">
                New Product
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.ToList())
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-action="UpdateProduct" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> 
                        @if(User.IsInRole("Admin"))
                        {
                            <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
