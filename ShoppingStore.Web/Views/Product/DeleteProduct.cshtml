@{ ViewData["Title"] = "Delete"; }
@model ShoppingStore.Web.Models.ProductViewModel


<form asp-action="DeleteProduct">

    <br />
    <div class="container border p-3">
        <h1 class="text-danger text-center">Do you really want to delete this product?</h1>
        <hr />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden="hidden" class="form-control" value="@Model.Id"/>
            
            <div class="col-2">
                <label asp-for="Name" class="control-lable pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-lable pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" value="@Model.CategoryName"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-lable pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="5">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-lable pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" value="@Model.Price.ToString("F")"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>

</form>


